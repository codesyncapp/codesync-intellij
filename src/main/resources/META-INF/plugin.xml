<idea-plugin>

  <!-- Unique id for this plugin. Must stay constant for the life of the plugin. -->
  <id>com.codesync</id>

  <!-- Text to display as name on Preferences/Settings | Plugin page -->
  <name>CodeSync</name>

  <!-- Product and plugin compatibility requirements -->
  <depends>com.intellij.modules.platform</depends>

  <!-- Text to display as description on Preferences/Settings | Plugin page -->
  <description><![CDATA[
    <p>CodeSync is a developer platform that streams code changes in real time.</p>
    <ul>
      <li><span><b>Never Lose Code Again: </b></span><span>All code changes are saved. "Rewind" to see all history.</span></li>
      <li><span><b>Coding Performance: </b></span><span>Track your performance every day. What did you actually write today?</span></li>
      <li><span><b>Social Coding: </b></span><span>Watch other developers as they code, in real time.</span></li>
    </ul>

    <b>Getting Started</b>
    <ul>
      <li>Follow the <a href="https://www.codesync.com/install">Setup</a></li>
      <li>You can see what you did for a particular day in the Review Today section</li>
      <li>You can Explore Public Repos and see the history of a particular file</li>
    </ul>

    We have plugins available for the following IDEs:
    <ul>
        <li>IntelliJ</li>
        <li>VS Code</li>
        <li>Atom</li>
    </ul>
    These help to give a "live coding" experience.
    
    <p><b>Content View (Replaying your changes)</b></p>
    <img src="https://codesync-images.s3.amazonaws.com/codesync-live-coding.gif" alt="Content View (Replaying your changes)"/>
    ]]>
    </description>

  <!-- Text to display as company information on Preferences/Settings | Plugin page -->
  <vendor email="hello@codesync.com" url="https://www.codesync.com">CodeSync</vendor>

  <projectListeners>
    <listener class="org.intellij.sdk.codesync.ProjectOpenCloseListener"
              topic="com.intellij.openapi.project.ProjectManagerListener"/>
  </projectListeners>
  <actions>
    <group id="org.intellij.sdk.action.GroupedActions" text="CodeSync" popup="true">
      <add-to-group group-id="MainMenu" anchor="after" relative-to-action="ToolsMenu"/>
      <action id="org.intellij.sdk.codesync.auth.AuthAction" class="org.intellij.sdk.codesync.auth.AuthAction"
              text="Login" description="Authentication setup" icon="SdkIcons.codeSyncIcon">
      </action>
      <action id="org.intellij.sdk.codesync.auth.LogoutAction" class="org.intellij.sdk.codesync.auth.LogoutAction"
              text="Use Different Account" description="Use a different account for codesync authentication."
              icon="SdkIcons.codeSyncIcon"
      >
      </action>
      <action id="org.intellij.sdk.codesync.codeSyncSetup.CodeSyncSetupAction" class="org.intellij.sdk.codesync.codeSyncSetup.CodeSyncSetupAction"
              text="Initialize Repo" description="Initialize repo with CodeSync" icon="SdkIcons.codeSyncIcon">
      </action>
    </group>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <notificationGroup id="CodeSync Notifications" displayType="BALLOON" key="codesync.notification"/>

    <toolWindow id="CodeSyncToolWindow" secondary="true" icon="SdkIcons.codeSyncIcon" anchor="left"
                factoryClass="org.intellij.sdk.codesync.toolWindows.CodeSyncToolWindowFactory"
    />
  </extensions>
</idea-plugin>
